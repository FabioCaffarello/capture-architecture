{
  "name": "capture-tor-api",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "services/capture/tor-api/cmd",
  "tags": [
    "lang:golang",
    "services:capture"
  ],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "dependsOn": ["tidy"],
      "options": {
        "command": "GOOS=linux CGO_ENABLED=0 GOARCH=amd64 go build -ldflags=\"-w -s\" -o dist/server ./cmd/main.go",
        "cwd": "{projectRoot}"
      }
    },
    "image": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "command": "docker build -t fabiocaffarello/tor-api:latest -f ./Dockerfile .",
        "cwd": "{projectRoot}"
      }
    },
    "e2e": {
      "executor": "nx:run-commands",
      "dependsOn": ["image"],
      "options": {
        "command": "docker-compose up -d",
        "cwd": "{projectRoot}"
      }
    },
    "serve": {
      "executor": "@nx-go/nx-go:serve",
      "options": {
        "main": "{projectRoot}/cmd/main.go"
      }
    },
    "test": {
      "executor": "@nx-go/nx-go:test"
    },
    "lint": {
      "executor": "@nx-go/nx-go:lint"
    },
    "tidy": {
      "executor": "@nx-go/nx-go:tidy"
    }
  }
}
